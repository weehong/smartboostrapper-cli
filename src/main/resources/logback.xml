<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender for CLI output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <!-- Only show WARN and above by default for cleaner CLI output -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
    </appender>

    <!-- Debug Appender for verbose mode -->
    <appender name="DEBUG_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender for logging to file -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${user.home}/.smartbootstrapper/logs/smartbootstrapper.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${user.home}/.smartbootstrapper/logs/smartbootstrapper.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Application Loggers -->
    <logger name="com.smartbootstrapper" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- JGit logging (reduce verbosity) -->
    <logger name="org.eclipse.jgit" level="WARN"/>

    <!-- OkHttp logging (reduce verbosity) -->
    <logger name="okhttp3" level="WARN"/>

    <!-- Root Logger -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
